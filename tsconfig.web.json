{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "outDir": "dist",
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2016", "dom"]
  },
  "include": ["src/**/*", "tests"]
}
